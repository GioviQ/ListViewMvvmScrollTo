<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:ListViewMvvmScrollTo.Extensions"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ListViewMvvmScrollTo.Views.ListPage"
             Title="{Binding Title}">
    <ListView Margin="8,0" ItemsSource="{Binding MyItems}" extensions:ListViewExtensions.ScrollTo="{Binding Bookmark}"/>
</ContentPage>